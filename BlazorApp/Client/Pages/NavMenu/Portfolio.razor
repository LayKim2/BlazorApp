    }

    void RemoveImage(string target)
    {
        switch (target)
        {
            case "SideImageData":
                edtingPortfolio.SideImageData = string.Empty;
                break;
            case "Concept1ImageData1":
                edtingPortfolio.Concept1ImageData1 = string.Empty;
