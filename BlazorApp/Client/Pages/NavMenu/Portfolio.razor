    async Task OnFileChange(InputFileChangeEventArgs e, string target)
    {
        var format = "image/png";

        foreach (var image in e.GetMultipleFiles(int.MaxValue))
        {
            var resizeImage = await image.RequestImageFileAsync(format, 200, 200);
            var buffer = new byte[resizeImage.Size];
            await resizeImage.OpenReadStream().ReadAsync(buffer);
            var imageData = $"data:{format};base64,{Convert.ToBase64String(buffer)}";

            switch (target)
            {
                case "SideImageData":
                    edtingPortfolio.SideImageData = imageData;
                    break;
                case "Concept1ImageData1":
                    edtingPortfolio.Concept1ImageData1 = imageData;
                    break;
                case "Concept1ImageData2":
                    edtingPortfolio.Concept1ImageData2 = imageData;
                    break;
                case "Concept1ImageData3":
                    edtingPortfolio.Concept1ImageData3 = imageData;
                    break;
                case "Concept2ImageData1":
                    edtingPortfolio.Concept2ImageData1 = imageData;
                    break;
                case "Concept2ImageData2":
                    edtingPortfolio.Concept2ImageData2 = imageData;
                    break;
                case "Concept2ImageData3":
                    edtingPortfolio.Concept2ImageData3 = imageData;
                    break;
                case "AboutImageData":
                    edtingPortfolio.AboutImageData = imageData;
                    break;
            }
